<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodCarlos (Home)</title>

    <!-- Fonts and Swiper -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>

    <!-- Website Icon -->
    <link rel="Website icon" type="png" href="asset/icons/goodcarlos-favicon-color.png">

    <!-- Style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    
    <!-- HEADER SECTION START -->
    <header class="header">
        <section class="flex">
            <div href="/home" class="logo">
                <img src="asset/logo/png/logo-no-background.png" alt="">
            </div>
            <nav class="navbar">
                <a href="/home">Home</a>
                <a href="#">About Us</a>
                <a href="#">Add Review</a>
            </nav>
            <div class="icons">
                <a href="#"><i class="fas fa-search"></i></a>
                <div id="user-btn" class="fas fa-user"></div>
                <div id="menu-btn" class="fas fa-bars"></div>
            </div>
        </section>
    </header>
    <!-- HEADER SECTION END -->

    <!-- KATEGORI START -->
    <section class="category">
        <h1 class="title">CATEGORY</h1>
        <div class="box-container">
            <a href="#" class="box">
                <img src="category/kategori-1.png" alt="">
                <h3>FOODS</h3>
            </a>
            <a href="#" class="box">
                <img src="category/kategori-3.png" alt="">
                <h3>DRINKS</h3>
            </a>
            <a href="#" class="box">
                <img src="category/kategori-4.png" alt="">
                <h3>DESSERTS</h3>
            </a>
        </div>
    </section>
    <!-- KATEGORI END -->

    <!-- PRODUK START -->
    <section class="product">
        <h1 class="title">GoodCarlos Best Reviews</h1>
        <div class="box-container">
            <% dataItem.forEach((el) => { %>
                <form action="" method="" class="box">
                    <button type="submit" class="fas fa-vote-yea" name="vote"></button>
                    <img src="<%= el.imageURL %>" alt="">
                    <% el.Categories.forEach((cat) => { %>
                        <a href="" class="ctgr"><%= cat.name %></a>
                    <% }) %>
                    <div class="name"><%= el.name%></div>
                    <div class="price"><%= formattedCurr(el.price) %></div>
                    <div class="flex">
                        <div class="vote">
                            <p>UpVotes : <%= el.vote %></p>
                        </div>
                    </div>
                </form>
            <% }) %>
        </div>
    </section>
    <!-- PRODUK END -->
</body>
</html>