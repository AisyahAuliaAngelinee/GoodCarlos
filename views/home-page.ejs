<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodCarlos (Home)</title>

    <!-- Fonts and Swiper -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>

    <!-- Website Icon -->
    <link rel="Website icon" type="png" href="asset/icons/goodcarlos-favicon-color.png">

    <!-- Style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    
    <!-- HEADER SECTION START -->
    <header class="header">
        <section class="flex">
            <div href="/" class="logo">
                <img src="asset/logo/png/logo-no-background.png" alt="">
            </div>
            <nav class="navbar">
                <a href="/">Home</a>
                <a href="#">About Us</a>
                <a href="/logout">Log Out</a>
            </nav>
            <div class="icons">
                <a href="/search"><i class="fas fa-search"></i></a>
                <div id="user-btn" class="fas fa-user"></div>
                <div id="menu-btn" class="fas fa-bars"></div>
            </div>
        </section>
    </header>
    <!-- HEADER SECTION END -->

    <!-- KATEGORI START -->
    <section class="category">
        <h1 class="title">CATEGORY</h1>
        <div class="box-container">
            <a href="/italian" class="box">
                <img src="category/italian.png" alt="">
                <h3>Italian</h3>
            </a>
            <a href="/healthy" class="box">
                <img src="category/healthy.png" alt="">
                <h3>Healthy</h3>
            </a>
            <a href="/japan" class="box">
                <img src="category/japan.png" alt="">
                <h3>Japanese</h3>
            </a>
        </div>
    </section>
    <!-- KATEGORI END -->

    <!-- PRODUK START -->
    <!-- <%= console.log(data);  %> -->
    <section class="product">
        <h1 class="title">Recent Food Reviews</h1>
        <div class="box-container">
            <% data.forEach(el => { %>
                <div id="<%= "product"+el.id %>" class="box">
                    <a href="/<%= el.id %>/upVote"><button class="fas fa-thumbs-up" name="vote"></button></a>
                    <img src="<%= el.imageURL %>" alt="">

                    <a href="" class="ctgr"><%= el.Categories.name %></a>

                    <a href="" class="category"><%= data.name %></a>

                    <div class="name"><%= el.name %></div>
                    <div class="desc">
                        <p><%= el.review %></p>
                    </div>
                    <div class="flex">
                        <div class="price"><%= formattedCurr(el.price) %></div>
                        <a href="/delete"><button style="background-color: red; color: white;">Delete</button></a>
                        <a href="/<%= el.id %>/edit"><button style="background-color: greenyellow;">Edit</button></a>
                        <div class="vote">
                            <p>UpVotes : <%= el.vote %></p>
                        </div>  
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="more-btn">
            <a href="/add/reviews" class="btn">Create Reviews</a>
        </div>
    </section>  
    <!-- PRODUK END -->

</body>
</html>